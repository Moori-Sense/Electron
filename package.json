{
  "name": "electron-vite-project",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "description": "Electron/Vite 기반의 데스크톱 애플리케이션입니다.",
  "author": "사용자 이름 또는 회사 이름",
  "scripts": {
    "dev": "vite",
    "build": "npm run type-check && tsc -p tsconfig.main.json && vite build && electron-builder",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "rebuild": "electron-rebuild",
    "postinstall": "electron-rebuild",
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "type-check": "tsc --noEmit -p tsconfig.json"
  },
  "dependencies": {
    "axios": "^1.12.2",
    "better-sqlite3": "^12.2.0",
    "dotenv": "^17.2.2",
    "electron-squirrel-startup": "^1.0.1",
    "prop-types": "^15.8.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-gauge-chart": "^0.5.1",
    "recharts": "^3.2.1",
    "serialport": "^13.0.0"
  },
  "devDependencies": {
    "@electron-forge/cli": "^7.10.0",
    "@electron-forge/maker-deb": "^7.10.0",
    "@electron-forge/maker-rpm": "^7.10.0",
    "@electron-forge/maker-squirrel": "^7.10.0",
    "@electron-forge/maker-zip": "^7.10.0",
    "@electron-forge/plugin-auto-unpack-natives": "^7.10.0",
    "@electron-forge/plugin-fuses": "^7.10.0",
    "@electron/fuses": "^1.8.0",
    "@types/better-sqlite3": "^7.6.13",
    "@types/react": "^18.2.64",
    "@types/react-dom": "^18.2.21",
    "@typescript-eslint/eslint-plugin": "^7.1.1",
    "@typescript-eslint/parser": "^7.1.1",
    "@vitejs/plugin-react": "^4.2.1",
    "electron": "^30.0.1",
    "electron-rebuild": "^3.2.9",
    "eslint": "^8.57.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "typescript": "^5.2.2",
    "vite": "^5.1.6",
    "vite-plugin-electron": "^0.28.6",
    "vite-plugin-electron-renderer": "^0.14.5"
  },
  "main": "dist-electron/main.cjs"
}
